<div>
  <section class='container'>
    <p>scenario texts</p>
    <form
      id='story-choice'
      data-story-choice-set='{{story_id}}'
      data-story-id='{{story_id}}'
    >

      <input
        type='radio'
        class='btn-check next-choice'
        name='options-outlined'
        id='success-outlined1'
        value='{{story.Option1}}'
        autocomplete='off'
      />
      <label
        class='btn btn-outline-success'
        for='success-outlined1'
      >{{story.Option1}}</label>
      <br />

      <input
        type='radio'
        class='btn-check next-choice'
        name='options-outlined'
        id='success-outlined2'
        value='{{story.Option2}}'
        autocomplete='off'
      />
      <label
        class='btn btn-outline-success'
        for='success-outlined2'
      >{{story.Option2}}</label>

      <div>
        <button type='submit' id='continue'>Continue</button>

        <button
          id='save-story'
          {{! if the storyline has just started, then set the data-id to 1 }}
          data-id='{{story_line}}'
          data-story-id='{{story_id}}'
          data-story-title='{{title}}'
        >'Save Progress (and Exit?)!'</button>
      </div>
    </form>
  </section>

</div>
<script src='/js/storyhandling.js'></script>